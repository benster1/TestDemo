@{
}
@model IEnumerable<DemoAcculynx.Models.Item>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items List</h2>
        </div>

    </div>

    <div class="row" align="center">
        <div class="col-md-12">
            <form action="/Home/Items" method="get">
                    <table>
                        <tr>
                            <td>
                                <input type="text"  class="form-control" name="tag" aria-describedby="tagHelp" placeholder="Search by Tag"                                                       nt to search for">
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </td>
                        </tr>
                    </table>

               
            </form>

        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Tags
                    </th>
                    <th>
                        Link
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var root in Model)
                {
                    <tr>
                        <td width="25%">@root.title</td>
                        <td width="25%">
                            @foreach (var tag in root.tags)
                            {
                                @tag
                            }

                        </td>
                        <td width="25%"><a href="@root.link">@root.link</a></td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">


                                @*<a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Tags
                    </th>
                    <th>
                        Link
                    </th>
                    <th>
                    </th>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

